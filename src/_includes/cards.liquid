<div class="cards">
  {% for card in cards %}
    <div class="card">
      <div class="card-internal">
        <div class="card-content">
          {% for item in card.items %}
            <h4>{{ item }}</h4>
          {% endfor %}
        </div>
        <div class="link">
          <span>+ </span><span class="underline">Know more</span>
        </div>
      </div>
      <div class="label"><h3>{{ card.label }}</h3></div>
    </div>
  {% endfor %}
</div>
