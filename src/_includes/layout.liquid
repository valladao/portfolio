{%- comment -%} Before release, remove these | include in project {%- endcomment -%}
{%- comment %} theme-check-disable UndefinedObject {%- endcomment -%}
{%- comment %} theme-check-disable RemoteAsset {%- endcomment -%}
{%- comment %} theme-check-disable MissingTemplate {%- endcomment -%}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Audiowide&family=Droid+Sans+Mono:wght@400;600&display=swap"
      rel="stylesheet"
    />
    {% render 'critical-css' %}
    <!-- <link rel="stylesheet" href="styles/main.css" /> -->
  </head>
  <body>

    {%- comment -%} Background {%- endcomment -%}
    <div class="grid-container">
      <div class="plane">
        <div class="grid"></div>
        <div class="glow"></div>
      </div>
    </div>
    <div id="horizon">
      <div class="glow"></div>
    </div>
    <div id="earth"></div>

    {%- comment -%} Content {%- endcomment -%}
    {{ content }}

    {%- comment -%} Footer {%- endcomment -%}
    <div class="footer"></div>

    {%- comment -%} Script {%- endcomment -%}
    <!-- <script type="module" src="scripts/main.js"></script> -->
  </body>
</html>
