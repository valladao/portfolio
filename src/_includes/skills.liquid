<style>

  .cards {
    display: flex;
    justify-content: center;
    align-items: stretch;
  }

  .card {
    display: flex;
    flex-direction: column;
    cursor: pointer;
    display: grid;
    width: 400px;
    aspect-ratio: 3/4;
    --bc: var(--accent); /*border-color*/
    --bs: 10px; /*border-size*/
    --cs: 20px; /*cut-size*/
    grid-template-rows: var(--cs) auto 1fr;
  }

  .card > .label {
    grid-area: 1/1/2/2;
    justify-self: end;
    min-width: 50%;
    min-height: calc(var(--cs) * 2 + var(--bs));

    display: grid;
    place-items: center;
    text-align: center;
    background-color: var(--bc);

    clip-path: polygon(
      var(--cs) 0,
      100% 0,
      100% 100%,
      0 100%,
      0 var(--cs)
    );
  }

  .label h3 {
    color: var(--white);
    margin-bottom: 0;
    padding: 0 16px;
  }

  .card-internal > .link > span {
    color: var(--white);
  }

.card > .card-internal {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 48px 24px;

  background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/grid.svg);
  background-size: 6%;
  background-color: rgba(0,0,255,0.3);

  grid-area: 2/1/4/2;
  transition: .8s;
  object-fit: cover;
  --em: .5;
  clip-path: polygon(
    calc(var(--cs) + var(--bs) * var(--em)) var(--bs),
    calc(100% - var(--bs)) var(--bs),
    calc(100% - var(--bs)) calc(100% - var(--cs) - var(--bs)),
    calc(50% + var(--cs) - var(--bs) * var(--em)) calc(100% - var(--cs) - var(--bs)),
    calc(50% - var(--bs) * var(--em)) calc(100% - var(--bs)),
    var(--bs) calc(100% - var(--bs)),
    var(--bs) calc(var(--cs) + var(--bs) * var(--em))
    );
}

.card::before {
  content: "";
  grid-area: 2/1/4/2;
  background-color: var(--bc);
  clip-path: polygon(
    var(--cs) 0,
    100% 0,
    100% calc(100% - var(--cs)),
    calc(50% + var(--cs)) calc(100% - var(--cs)),
    50% 100%,
    0% 100%,
    0 var(--cs)
  );
}
  .card-internal {
    flex-grow: 1;
  }

  .card:hover {
    background-color: rgba(255, 255, 255, 0.02);
  }

</style>

